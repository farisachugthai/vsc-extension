{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "tsc ${file}",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": "$tsc",
            "path": "${file}",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "eslint",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        }
    ]
}